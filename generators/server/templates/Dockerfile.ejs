FROM eclipse-temurin:11-jre-alpine
RUN mkdir -p /opt/app/reports
RUN mkdir reports
COPY ./target/<%= dasherizedBaseName %>-<%= projectVersion %>.jar /opt/app
USER root
RUN chown root:root /opt/app/<%= dasherizedBaseName %>-<%= projectVersion %>.jar
EXPOSE 8090
CMD ["java", "-Dspring.profiles.active=dev", "-jar", "/opt/app/<%= dasherizedBaseName %>-<%= projectVersion %>.jar"]
